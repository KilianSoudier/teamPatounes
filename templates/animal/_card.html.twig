<div class="card reveal">
  <div class="card-body">
    <div style="display:flex;gap:16px;align-items:flex-start">
      <img src="{{ animal.coverPath ?: asset('images/placeholder-pet.jpg') }}" alt="" style="width:120px;height:120px;object-fit:cover;border-radius:14px">
      <div style="flex:1">
        <h3 style="margin:0 0 6px"><a href="{{ path('animal_show',{slug:animal.slug}) }}">{{ animal.name }}</a></h3>
        <div class="muted">
          {{ animal.species.name }}{% if animal.breed %} · {{ animal.breed.name }}{% endif %}
          · {{ animal.shelter.name }}
        </div>
        <div style="margin-top:8px">
          <span class="pill status-{{ animal.status->value ?? animal.status }}">{{ animal.status }}</span>
          {% for t in animal.tags|default([]) %}
            {# si pivot AnimalTag -> t.tag.name ; si direct -> t.name #}
            <span class="tag">{{ t.tag.name ?? t.name }}</span>
          {% endfor %}
        </div>
      </div>
      <div>
        <a class="btn" href="{{ path('favorite_toggle',{id:animal.id}) }}">❤️</a>
      </div>
    </div>
  </div>
</div>
