{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block hero %}
<section class="hero">
  <div class="container">
    <h1 class="reveal">Connexion</h1>
  </div>
</section>
{% endblock %}

{% block body %}
<div class="grid grid-2">
  <section class="reveal">
    <div class="card">
      <div class="card-body">
        <form method="post" class="form">
          <div class="field">
            <label for="inputEmail">Email</label>
            <input id="inputEmail" name="_username" type="email" autocomplete="email" required class="input">
          </div>
          <div class="field">
            <label for="inputPassword">Mot de passe</label>
            <input id="inputPassword" name="_password" type="password" autocomplete="current-password" required class="input">
          </div>
          <button class="btn" type="submit"><span class="btn-shimmer"></span>Se connecter</button>
        </form>
      </div>
    </div>
  </section>
  <aside class="reveal">
    <div class="card"><div class="card-body">
      <p class="help">Pas encore de compte ? <a href="{{ path('app_register') }}">Inscription</a></p>
    </div></div>
  </aside>
</div>
{% endblock %}
